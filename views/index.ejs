                $("#closedMsg").hide();
                $.get( "http://postercompetition.com/file/Ecuador_Poster_Bienal_Bpe/open", function( data ) {
                  if(data === "Competition closed") {
                     $("#updateCreate").hide();
                     $("#closedMsg").show();
                  }
                });
                $.get( "http://postercompetition.com/file/Ecuador_Poster_Bienal_Bpe/categories", function( data ) {
                  $.each(data, function (i, item) {
                      $('#category').append($('<option>', {
                          value: item.value,
                          text : item.text
                      }));
                  });
                });
                // bind 'myForm' and provide a simple callback function
                $('#updateCreate').ajaxForm({
                success: function(response) {
                    if (response === "File uploaded") {
                       $("#errorMsg").hide();
                       $("#successMsg").show();
                       $("#updateCreate").hide();
                    } else {
                       $("#errorMsg").show();
                       $("#errorTxt").text(response);
                    }
                },
                error: function(xhr, textStatus, errorThrown) {
                    $("#errorMsg").show();
                    $("#errorTxt").text("Image uploaded is too large.");
                }
                });
            });
        </script>

